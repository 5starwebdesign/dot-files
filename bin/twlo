#! /usr/bin/env php
<?php
$d = json_decode(file_get_contents('http://dev.markitondemand.com/MODApis/Api/v2/Quote/json?symbol=TWLO'), true);
$lastPrice = sprintf("\033[30;1m%.2f\033[0m", $d['LastPrice']);
$changeMod = $d['Change'] > 0 ? '+' : null;
$changeFormat = ($d['Change'] >= 0) ? "\033[32;1m%s%.2f\033[0m" : "\033[31;1m%s%.2f\033[0m";
$change = sprintf($changeFormat, $changeMod, $d['Change']);
printf("  %s %s | ↑ %.2f | ↓ %.2f | %s %s", $d['Symbol'], $lastPrice, $d['High'], $d['Low'], $change, PHP_EOL);
